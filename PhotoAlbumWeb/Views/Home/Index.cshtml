@model PhotoAlbumWeb.Models.ImageModel

@{
    ViewData["Title"] = "Home Page";
}



<div class="container">
    <div class="row">
        <div class="col-12 border-2 border-dark" style="border-style:solid;">
            <div class="row">
                <div class="col-12  bg-info">
                    <h3>Upload Images to Azure storage</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-12 bg-light">
                    <form enctype="multipart/form-data" method="post" asp-controller="Home" asp-action="Index">
                        <dl>
                            <dt>
                                <label>Upload Images</label>
                            </dt>
                            <dd>
                                <input type="file" name="Images" id="Images" multiple accept="image/png, image/jpeg" />
                            </dd>
                        </dl>
                        <input class="btn  btn-success" type="submit" value="Upload Images" />
                    </form>
                </div>
                <div class="clearfix">&nbsp;</div>
            </div>
        </div>
    </div>

    <div class="clearfix">&nbsp;</div>

    <div class="row">
        <div class="col-12 border-2 border-dark" style="border-style:solid;">
            <div class="row">
                <div class="col-12  bg-warning">
                    <h3>Display Images from Azure storage</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-12 bg-light">
                    @if (Model.ImageList.Count > 0)
                    {
                        <div class="card-body">
                            @foreach (string imageUrl in Model.ImageList)
                            {
                                <div class="card-img">
                                    <img src="@imageUrl" class="img-fluid img-thumbnail float-start" style="max-width:250px; max-height:250px;" />
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <h3>No Images found</h3>
                    }
                </div>
                <div class="clearfix">&nbsp;</div>
            </div>
        </div>
    </div>

</div>